<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="StickHeatmapVisualizer.MainWindow"
        Width="1000" Height="600"
        Title="Stick Heatmap Visualizer">

  <DockPanel Margin="10">
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
      <Button Name="ResetButton" Content="Reset" Width="80" />
      <Button Name="SaveButton" Content="Save" Width="80" />
      <Button Name="LoadButton" Content="Load" Width="80" />
      <Button Name="HelpButton" Content="Help" Width="80" />

    </StackPanel>

    <!-- Bottom Status -->
    <TextBlock Name="StatusLabel" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,0,0,0"
               FontFamily="Consolas" FontSize="14" />
    <TextBlock Name="TuningLabel" DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,0,0,0"
           FontFamily="Consolas" FontSize="14" />

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,10,0,0">
      <Image Name="LeftHeatmapSurface" Width="500" Height="500" />
      <Image Name="RightHeatmapSurface" Width="500" Height="500" />
    </StackPanel>
  </DockPanel>

</Window>
